{
    "name": "neos-fusion",
    "displayName": "Neos Fusion language support",
    "description": "Fusion and Eel language support for Neos CMS",
    "license": "MIT",
    "icon": "images/neos-fusion-icon.png",
    "galleryBanner": {
        "color": "#26224C",
        "theme": "dark"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/networkteam/vscode-neos-fusion.git"
    },
    "version": "1.0.3",
    "publisher": "networkteam",
    "engines": {
        "vscode": "^1.20.0"
    },
    "categories": [
        "Languages"
    ],
    "main": "./out/extension",
    "contributes": {
        "languages": [
            {
                "id": "fusion",
                "aliases": [
                    "Fusion",
                    "fusion"
                ],
                "extensions": [
                    ".fusion"
                ],
                "configuration": "./language-configuration.json"
            }
        ],
        "grammars": [
            {
                "language": "fusion",
                "scopeName": "source.fusion",
                "path": "./syntaxes/fusion.tmLanguage.json"
            }
        ],
        "commands": [
            {
                "command": "extension.sayHello",
                "title": "Hello World"
            }
        ],
        "snippets": [
            {
                "language": "fusion",
                "path": "./snippets/neos-fusion-objects.json"
            },
            {
                "language": "fusion",
                "path": "./snippets/neos-neos-objects.json"
            }
        ]
        "configuration": {
			"type": "object",
			"title": "Neos Fusion",
			"properties": {
				"neosFusion.maxNumberOfProblems": {
					"scope": "resource",
					"type": "number",
					"default": 100,
					"description": "Controls the maximum number of problems produced by the server."
				},
				"neosFusion.trace.server": {
					"scope": "window",
					"type": "string",
					"enum": [
						"off",
						"messages",
						"verbose"
					],
					"default": "off",
					"description": "Traces the communication between VSCode and the language server."
				}
			}
        }
    },
    "activationEvents": [
        "onLanguage:fusion",
        "workspaceContains:**/*.fusion"
    ],
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./",
        "postinstall": "node ./node_modules/vscode/bin/install",
        "test": "npm run compile && node ./node_modules/vscode/bin/test"
    },
    "devDependencies": {
        "@types/mocha": "^2.2.42",
        "@types/node": "^7.0.43",
        "chai": "^4.1.2",
        "mocha": "^5.0.4",
        "tslint": "^5.8.0",
        "typescript": "^2.6.1",
        "vscode": "^1.1.6"
    },
    "dependencies": {
        "fusion-parser": "^1.0.0",
        "vscode-languageclient": "^4.0.0",
        "vscode-languageserver": "^4.0.0"
    }
}
